{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/optimize-resume.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/generate-pdf.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/generate-cover-letter.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/history.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/test.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}


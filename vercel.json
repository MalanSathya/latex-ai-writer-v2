{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static",
      "config": {
        "zeroConfig": true,
        "buildCommand": "cd frontend && npm install && npm run build",
        "outputDirectory": "frontend/dist"
      }
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "vercel-api/generate-cover-letter.ts",
      "use": "@vercel/node"
    },
    {
      "src": "vercel-api/generate-pdf.ts",
      "use": "@vercel/node"
    },
    {
      "src": "vercel-api/hello.ts",
      "use": "@vercel/node"
    },
    {
      "src": "vercel-api/history.ts",
      "use": "@vercel/node"
    },
    {
      "src": "vercel-api/optimize-resume.ts",
      "use": "@vercel/node"
    },
    {
      "src": "vercel-api/status.ts",
      "use": "@vercel/node"
    },
    {
      "src": "vercel-api/test.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/vercel-api/$1"
    },
    {
      "src": "/backend",
      "dest": "backend/main.py"
    },
    {
      "src": "/backend/(.*)",
      "dest": "backend/main.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(assets|images|fonts)/.*",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/[^.]+",
      "dest": "/frontend/index.html",
      "status": 200
    }
  ]
}